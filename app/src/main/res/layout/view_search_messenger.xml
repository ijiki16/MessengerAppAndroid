<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_view_container_height"
    tools:background="@color/blue_500"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/search_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_view_height"
        android:drawablePadding="@dimen/spacing_xxs"
        android:paddingHorizontal="@dimen/search_drawable_padding"
        android:drawableStart="@drawable/ic_baseline_search_24"
        android:layout_margin="@dimen/spacing_s"
        android:layout_weight="1"
        android:background="@drawable/shape_search_view_bg"
        android:hint="@string/search"
        android:textColorHint="@color/gray_700"
        android:textColor="@color/gray_800"
        android:textCursorDrawable="@color/gray_800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</merge>